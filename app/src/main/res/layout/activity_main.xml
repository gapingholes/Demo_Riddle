<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding= "16dp">

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="297dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextQuestion1"
            android:layout_width="91dp"
            android:layout_height="153dp"
            android:layout_weight="1"
            android:text="Question 1:                           This word has the same pronunciation even after removing 4 letters from it." />

        <Button
            android:id="@+id/RevealQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reveal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="412dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextQuestion2"
            android:layout_width="1dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:text="Question 2:                                                  How do you make 1 disappear?" />

        <Button
            android:id="@+id/RevealQuestion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Reveal" />
    </LinearLayout>

</LinearLayout>
